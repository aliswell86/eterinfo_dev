  <script>
    jQuery(document).ready(function() {

      $("button").click(function() {
        var button_nm = $(this).attr("class");

        if(button_nm.indexOf("dvoption") > -1) {
          var dvoption_num = button_nm.substring(button_nm.indexOf("dvoption")+("dvoption".length));
          
          //css(click)
          $(this).parents("p").children("button").each(function(idex, item) {
            $(this).attr("class","btn btn-dv dvoption"+$(this).attr("class").substring($(this).attr("class").indexOf("dvoption")+("dvoption".length)));
          });
          $(this).attr("class","btn btn-dv-on dvoption" + dvoption_num); //클릭CSS

          plusup.getPlusup(dvoption_num);
        }
      });

      plusup.getPlusup("1");
    });
  </script>
